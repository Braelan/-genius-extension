{ "manifest_version": 2,
  "name": "Handy Extension",
  "description": "This will block some distractions",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

 "background": {
   "scripts": ["background.js"],
   "persistent": true
 },
"content_scripts": [{
  "matches": [ "https://www.genius.com/*", "http://www.genius.com/*"],
  "js": ["content_script.js"]
}],

  "permissions": [
    "activeTab",
    "tabs",
    "webNavigation"

  ]

}
